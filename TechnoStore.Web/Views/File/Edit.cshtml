@model FileVm
@{
    ViewData["Title"] = "Edit";
}

<div class="card card-custom" style="direction: rtl; text-align: right;">
    <div class="card-header">
        <div class="card-title">
            <span class="card-icon">
                <i class="flaticon2-chat-1 text-primary"></i>
            </span>
            <h3 class="card-label">
                تعديل النوع المحدد
            </h3>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Edit" class="form" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-5">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CreateAt" value="@ViewBag.CreateAt" />
                    <input type="hidden" asp-for="CreateBy" value="@ViewBag.CreateBy" />
                    <input type="hidden" asp-for="AttachmentUrl" value="@ViewBag.AttachmentUrl" />
                    <div class="form-group">
                        <label class="control-label">العنوان</label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-7">
                    <div class="form-group">
                        <label class="control-label">إرفاق ملف</label>
                        <input type="file" name="attachment" class="form-control" required />
                        <span asp-validation-for="AttachmentUrl" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="تعديل" class="btn btn-warning" />
                <a asp-action="Index" class="btn btn-danger">رجوع</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
