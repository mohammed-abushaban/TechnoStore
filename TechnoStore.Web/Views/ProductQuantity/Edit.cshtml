@model ProductQuantityVm

@{
    ViewData["Title"] = "Edit";
}

<div class="card card-custom" style="direction: rtl; text-align: right;">
    <div class="card-header">
        <div class="card-title">
            <span class="card-icon">
                <i class="flaticon2-chat-1 text-primary"></i>
            </span>
            <h3 class="card-label">
                تعديل البيانات
            </h3>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="CreateAt" value="@ViewBag.CreateAt" />
                        <input type="hidden" asp-for="CreateBy" value="@ViewBag.CreateBy" />

                        <label class="control-label">المنتج</label>
                        <div class="card-custom" style="direction:ltr;">
                            <select asp-for="ProductId" class="form-control selectpicker" asp-items="ViewBag.ProductId" data-live-search="true"></select>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label class="control-label">الكمية</label>
                        <input asp-for="Quantity" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label class="control-label">اللون</label>
                        <input asp-for="Color" class="form-control" type="color" />
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="تعديل" class="btn btn-warning" />
                <a asp-action="Index" class="btn btn-danger">رجوع</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
