@model ProductVm

@{
    ViewData["Title"] = "Edit";
}

<div class="card card-custom" style="direction: rtl; text-align: right;">
    <div class="card-header">
        <div class="card-title">
            <span class="card-icon">
                <i class="flaticon2-chat-1 text-primary"></i>
            </span>
            <h3 class="card-label">
                تعديل البيانات
            </h3>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreateAt" value="@ViewBag.CreateAt" />
            <input type="hidden" asp-for="CreateBy" value="@ViewBag.CreateBy" />
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label class="control-label">الاسم</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <label class="control-label">كود المنتج</label>
                        <input asp-for="Code" class="form-control" readonly />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="form-group">
                        <label class="control-label">تفاصيل المنتج</label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">التصنيف</label>
                        <div class="card-custom" style="direction:ltr;">
                            <select asp-for="SubCategoryId" class="form-control selectpicker" asp-items="ViewBag.SubCategoryId" data-live-search="true"></select>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">الماركة</label>
                        <div class="card-custom" style="direction:ltr;">
                            <select asp-for="BrandId" class="form-control selectpicker" asp-items="ViewBag.BrandId" data-live-search="true"></select>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">المورد</label>
                        <div class="card-custom" style="direction:ltr;">
                            <select asp-for="SupplierId" class="form-control selectpicker" asp-items="ViewBag.SupplierId" data-live-search="true"></select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label class="control-label">سعر الشراء</label>
                        <input type="number" asp-for="PriceBuy" class="form-control" />
                        <span asp-validation-for="PriceBuy" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label class="control-label">سعر البيع</label>
                        <input type="number" asp-for="PriceSale" class="form-control" />
                        <span asp-validation-for="PriceSale" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label class="control-label">خصم  / نسبة مئوية</label>
                        <input type="number" asp-for="Discount" class="form-control" />
                        <span asp-validation-for="Discount" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="تعديل" class="btn btn-warning" />
                <a asp-action="Index" class="btn btn-danger">رجوع</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
