@model UserVm

@{
    ViewData["Title"] = "Details";
}
<style>
    td {
        color: black;
        font-weight: bold;
    }

    .cardCustom {
        direction: rtl;
        text-align: right;
    }
</style>

<div class="card card-custom cardCustom">
    <div class="card-header">
        <div class="card-title">
            <span class="card-icon">
                <i class="flaticon2-chat-1 text-primary"></i>
            </span>
            <h3 class="card-label">
                تفاصيل  العنصر
            </h3>
        </div>
    </div>
    <div class="card-body">
        <div>
            <div class="row">
                <div class="col-md-6">
                    <table class="table table-bordered">
                        <tr>
                            <td>الاسم الأول</td>
                            <td>@Html.DisplayFor(model => model.FirstName)</td>
                        </tr>
                        <tr>
                            <td>الاسم الثاني</td>
                            <td>@Html.DisplayFor(model => model.LastName)</td>
                        </tr>
                        <tr>
                            <td>البريد الالكتروني</td>
                            <td>@Html.DisplayFor(model => model.Email)</td>
                        </tr>

                        <tr>
                            <td>اسم المستخدم</td>
                            <td>@Html.DisplayFor(model => model.UserName)</td>
                        </tr>
                        <tr>
                            <td>رقم التواصل</td>
                            <td>@Html.DisplayFor(model => model.PhoneNumber)</td>
                        </tr>
                        <tr>
                            <td>الجنس</td>
                            <td>@Html.DisplayFor(model => model.Gender)</td>
                        </tr>
                        <tr>
                            <td>نوع الحساب</td>
                            <td>@Html.DisplayFor(model => model.UserType)</td>
                        <tr>
                            <td>تاريخ الميلاد</td>
                            <td>@Model.BirthDay.Value.ToShortDateString()</td>
                        </tr>
                        <tr>
                            <td>العنوان</td>
                            <td>@Html.DisplayFor(model => model.Address)</td>
                        </tr>
                        <tr>
                            <td>المدينة</td>
                            <td>@Html.DisplayFor(model => model.CityName)</td>
                        </tr>
                        <tr>
                            <td>كود المدينة</td>
                            <td>@Html.DisplayFor(model => model.Zip_Code)</td>
                        </tr>
                        <tr>
                            <td>تفعيل النشرة البريدية</td>
                            <td>@Html.DisplayFor(model => model.Newsletter)</td>
                        </tr>
                        <tr>
                            <td>حساب نزيل</td>
                            <td>@Html.DisplayFor(model => model.IsGeast)</td>
                        </tr>
                        <tr>
                            <td>صورة المستخدم</td>
                            <td><img src="~/Images/UsersImages/@Html.DisplayFor(model => model.ImageUrl)" width="500" /></td>
                        </tr>
                        <tr>
                            <td>تم تسجيله بواسطة</td>
                            <td>@Html.DisplayFor(model => model.CreateBy)</td>
                        </tr>
                        <tr>
                            <td>تم تعديل البيانات بواسطة</td>
                            <td>@Html.DisplayFor(model => model.UpdateBy)</td>
                        </tr>
                        <tr>
                            <td>تاريخ التسجيل</td>
                            <td>@Html.DisplayFor(model => model.CreateAt)</td>
                        </tr>
                        <tr>
                            <td>تاريخ التعديل</td>
                            <td>@Html.DisplayFor(model => model.UpdateAt)</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-danger">رجوع</a>
        </div>
    </div>
</div>

