@model SubCategoryVm

@{
    ViewData["Title"] = "Details";
    List<ProductVm> products = ViewBag.products as List<ProductVm>;
    int Id = 1;
}
<style>
    td {
        color: black;
        font-weight: bold;
    }

    .cardCustom {
        direction: rtl;
        text-align: right;
    }
</style>

<div class="card card-custom cardCustom">
    <div class="card-header">
        <div class="card-title">
            <span class="card-icon">
                <i class="flaticon2-chat-1 text-primary"></i>
            </span>
            <h3 class="card-label">
                عرض جميع البيانات
            </h3>
        </div>
    </div>
    <div class="card-body">
        <div>
            <div class="row">
                <div class="col-md-7">
                    <table class="table table-bordered">
                        <tr>
                            <td>الاسم</td>
                            <td>@Html.DisplayFor(model => model.Name)</td>
                        </tr>
                        <tr>
                            <td>التصنيف</td>
                            <td>@Html.DisplayFor(model => model.CategoryName)</td>
                        </tr>
                        <tr>
                            <td>تم تسجيله بواسطة</td>
                            <td>@Html.DisplayFor(model => model.CreateBy)</td>
                        </tr>
                        <tr>
                            <td>تم تعديل البيانات بواسطة</td>
                            <td>@Html.DisplayFor(model => model.UpdateBy)</td>
                        </tr>
                        <tr>
                            <td>تاريخ التسجيل</td>
                            <td>@Html.DisplayFor(model => model.CreateAt)</td>
                        </tr>
                        <tr>
                            <td>تاريخ التعديل</td>
                            <td>@Html.DisplayFor(model => model.UpdateAt)</td>
                        </tr>
                    </table>
                </div>
                <div class="col-md-5">
                    <table class="table table-bordered">

                        <tr>
                            <th colspan="2">المنتجات المرتبطة بالتصنيف</th>
                        </tr>
                        @{
                            <tr>
                                <th>#</th>
                                <th>اسم المنتج</th>
                            </tr>
                            foreach (var item in products)
                            {

                                <tr>
                                    <td>@Id</td>
                                    <td>@item.Name</td>
                                </tr>
                                Id++;
                            }
                        }
                    </table>
                </div>
            </div>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">تعديل</a>
            <a asp-action="Index" class="btn btn-danger">رجوع</a>
        </div>
    </div>
</div>


